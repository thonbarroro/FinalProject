<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efc5c5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anton.finalproject.MainActivity">


    <EditText
        android:id="@+id/email_address"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/email_address"
        android:layout_alignRight="@+id/email_address"
        android:layout_alignEnd="@+id/email_address" />
    <Button
        android:id="@+id/btn"
        android:text="Login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="390dp"
        android:background="#cc4646"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:onClick="sendMessage"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="120dp"
        style="?android:attr/borderlessButtonStyle" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Magkabilang Mundo"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_marginTop="20dp"

        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Show"
        android:id="@+id/btnShow"
        android:layout_alignBottom="@+id/pwd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
       />



</RelativeLayout>
